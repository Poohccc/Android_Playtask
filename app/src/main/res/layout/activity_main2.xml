<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="taskItem"
            type="com.jnu.student.data.TaskItem" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="16dp"
            tools:ignore="MissingConstraints">


            <CheckBox
                android:id="@+id/checkbox_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="@{taskItem.completed}" />

            <TextView
                android:id="@+id/text_view_task_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:scaleType="centerCrop"
                android:text="@string/string_item_name"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_view_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="260dp"
                android:text="@string/string_item_price"
                android:textColor="#000"
                android:textSize="18sp" />
        </LinearLayout>
    </FrameLayout>
</layout>




